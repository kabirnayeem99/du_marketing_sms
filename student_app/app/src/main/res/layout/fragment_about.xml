<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32sp"
            android:scrollIndicators="none"
            android:scrollbarSize="0sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="144sp"
                    android:layout_height="180sp"
                    android:padding="16sp"
                    android:src="@drawable/dhaka_university_log" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16sp"
                    android:text="@string/department_name"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16sp">

                    <ImageView
                        android:id="@+id/ivTelephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:src="@drawable/ic_fluent_phone_24_selector" />

                    <ImageView
                        android:id="@+id/ivMail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:src="@drawable/ic_fluent_mail_24_selector" />

                    <ImageView
                        android:id="@+id/ivLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:src="@drawable/ic_fluent_map_24_selector" />


                    <ImageView
                        android:id="@+id/ivWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:src="@drawable/ic_fluent_globe_24_selector" />
                </LinearLayout>

                <TextView
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About" />

                <TextView
                    android:id="@+id/tvAboutIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16sp"
                    android:paddingVertical="8sp"
                    android:textAlignment="center" />
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/snackbarPlacement"
            android:layout_width="match_parent"
            android:layout_height="12sp"
            android:layout_alignParentBottom="true"
            android:background="#00000000" />
    </RelativeLayout>
</layout>
